<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF2F4"
    tools:context=".question">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50px"
        android:layout_height="40px"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:contentDescription="back"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30px"
        android:layout_marginTop="30px" />

    <ImageButton
        android:id="@+id/gift"
        android:layout_width="80px"
        android:layout_height="80px"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:contentDescription="Tokens"
        android:src="@drawable/gifts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginEnd="30px"
        android:layout_marginTop="30px"/>

    <ImageButton
        android:id="@+id/Notif"
        android:layout_width="75px"
        android:layout_height="80px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="100px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Notification"
        android:scaleType="fitXY"
        android:src="@drawable/notif"
        app:layout_constraintEnd_toEndOf="@id/gift"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <ImageButton
        android:id="@+id/tokens"
        android:layout_width="95px"
        android:layout_height="95px"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:contentDescription="Tokens"
        android:src="@drawable/tokens"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginStart="30px"
        android:layout_marginTop="30px" />

    <TextView
        android:id="@+id/tokenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kiwimaru"
        android:text="0"
        android:textSize="50px"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/tokens"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30px" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gift"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kiwimaru"
        android:text="Ask your partner a question!"
        android:textColor="@android:color/black"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView18" />

    <EditText
        android:id="@+id/questionbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mbox"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="    Enter text here..."
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="100px"
        android:layout_marginStart="100px"
        android:layout_marginBottom="150dp"/>

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="menu"
        android:src="@drawable/menu1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="185dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/home"
        android:layout_width="130dp"
        android:layout_height="63dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/message"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>